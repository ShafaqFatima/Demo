<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/shopCard"
    android:layout_margin="10dp"
    app:cardCornerRadius="15dp"
    android:layout_width="match_parent"
    android:background="#d3d3d3"
    android:elevation="10dp"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivDoctorImageView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:scaleType="centerCrop" />

        <ImageButton
            android:id="@+id/buttonLogo"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/ivDoctorImageView"
            android:src="@drawable/ic_doctor_icon"
            android:layout_toRightOf="@id/ivDoctorImageView" />
        <View
            android:id="@+id/viewItem"
            android:layout_width="1dp"
            android:background="@color/black"
            android:layout_toEndOf="@id/buttonLogo"
            android:layout_marginTop="5dp"
            android:layout_marginStart="30dp"
            android:layout_height="22dp"
            android:layout_toRightOf="@id/buttonLogo"
            android:layout_marginLeft="30dp" />

        <TextView
            android:id="@+id/tvPlace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/viewItem"
            android:layout_toRightOf="@id/buttonLogo"
            android:text="Noida"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvDocName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/ivDoctorImageView"
            android:textSize="12sp"
            android:layout_marginTop="4dp"
            android:layout_marginStart="8dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_below="@+id/tvPlace"
            android:text="Dr. Sudhansu Shekhar"
            android:layout_toRightOf="@id/ivDoctorImageView"
            android:layout_marginLeft="8dp" />

        <TextView
            android:id="@+id/tvBranch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvDocName"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@id/ivDoctorImageView"
            android:layout_toRightOf="@id/ivDoctorImageView"
            android:text="MBBS,DNB(Family Medicine)"
            android:textSize="8sp" />

        <TextView
            android:id="@+id/tvLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvBranch"
            android:layout_marginStart="6dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="3dp"
            android:layout_toEndOf="@id/ivDoctorImageView"
            android:layout_toRightOf="@id/ivDoctorImageView"
            android:text="Physician"
            android:textColor="@color/black"
            android:textSize="8sp" />

        <TextView
            android:id="@+id/tvFluent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvLevel"
            android:layout_marginStart="6dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="3dp"
            android:layout_toEndOf="@id/ivDoctorImageView"
            android:layout_toRightOf="@id/ivDoctorImageView"
            android:text="Speaks : "
            android:textColor="#673AB7"
            android:textSize="10sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvLang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvLevel"
            android:layout_marginTop="3dp"
            android:layout_toEndOf="@id/tvFluent"
            android:layout_toRightOf="@id/tvFluent"
            android:textStyle="bold"
            android:text="Hindi"
            android:textColor="@color/black"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tvExp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ivDoctorImageView"
            android:layout_alignLeft="@id/ivDoctorImageView"
            android:layout_alignRight="@id/ivDoctorImageView"
            android:background="#673AB7"
            android:gravity="center_horizontal"
            android:text="15 years exp"
            android:textAlignment="center"
            android:textColor="@color/white" />


    </RelativeLayout>
</androidx.cardview.widget.CardView>